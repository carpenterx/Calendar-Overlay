<Window x:Class="Calendar_Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar_Overlay"
        mc:Ignorable="d"
        Title="Calendar Overlay" 
        Height="450" Width="800"
        MouseMove="MouseMoveHandler"
        SourceInitialized="LoadWindowProperties"
        Closing="SaveWindowProperties"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        >
    <Window.Background>
        <SolidColorBrush Opacity="0.4" Color="Black"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="settingsPanel" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Toggle" Click="ToggleClick" Width="60" Height="30" Margin="2"/>
            <Button Content="Close" Click="CloseClick" Width="60" Height="30" Margin="2"/>
        </StackPanel>
        
    </Grid>
</Window>
